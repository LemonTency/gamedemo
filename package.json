{
  "name": "koawheel",
  "app": "bin/www",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node $npm_package_app",
    "debug": "./node_modules/.bin/nodemon $npm_package_app",
    "stop": "pkill -9 node",
    "test": "node $npm_package_app --test",
    "zip": "node ./bin/zip.js -n server.zip",
    "pm2": "pm2 start ecosystem.config.js --env dev",
    "prod": "pm2 start ecosystem.config.js --env production",
    "resetDB": "node bin/database",
    "doc": "apidoc -i src/controllers -o doc",
    "deploy": "node bin/deploy.js",
    "lint": "standard --fix"
  },
  "dependencies": {
    "commander": "^2.20.1",
    "debug": "^2.6.3",
    "glob": "^7.1.4",
    "ioredis": "^4.14.1",
    "koa": "^2.8.2",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-onerror": "^1.2.1",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.1",
    "koa2-cors": "^2.0.6",
    "log4js": "^3.0.6",
    "mysql2": "^1.7.0",
    "pug": "^2.0.4",
    "sequelize": "^5.19.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-decorators": "^7.7.0",
    "@babel/register": "^7.7.0",
    "archiver": "^3.1.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "node-ssh": "^6.0.0",
    "nodemon": "^1.19.3"
  }
}
